<div class="form-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="form-container">

          <h4>Please enter a review for <%= @user.first_name %>'s "<%= @booking.skill.title %>" </h4>

          <%= simple_form_for [@booking, @review], url: booking_reviews_path(@booking) do |f| %>
            <%= f.input :content %>
            <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
            <%= f.submit%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
