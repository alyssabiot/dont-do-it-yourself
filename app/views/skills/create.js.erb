<% if @skill.errors.any? %>
  // Render new skill form with errors
  $('#new_skill').html("<%= j render 'skills/form', skill: @skill %>");
<% else %>
  // Create a paragraph for the new skill. But hide it.
  var new_skill = $("<%= j render 'skills/show', skill: @skill %>").hide();
  // Add it to the DOM, at the end of the existing skills. It's still hidden.
  $('#skills').append(new_skill);
  // Show the new skill with an animation!
  new_skill.slideDown();
  // Reset the form
  $('#new_skill').html("<%= j render 'skills/form', skill: Skill.new %>");
<% end %>
