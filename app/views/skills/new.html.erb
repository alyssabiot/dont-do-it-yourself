<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Add a new skill</h2>
      <%= simple_form_for [ @user, @skill ], url: user_skills_path(@user) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :category, collection: CATEGORIES %>
        <%= f.input :location %>
        <%= f.input :price_per_hour %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
