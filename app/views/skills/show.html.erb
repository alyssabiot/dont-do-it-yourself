<div>
  <% if !@skill.photo.blank? %>
    <div class="banner banner-skill" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),
    url('<%= cl_image_path @skill.photo %>');">
    <h3><%=  @skill.title %></h3>
    </div>
  <% else %>
    <div class="banner banner-skill" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),
    url('<%= image_url(@image_id) %>');">
    <h3><%=  @skill.title %></h3>
    </div>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <div class="card-box">
        <div class="card-item">
          <h4><%= @skill.location %></h4>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-4">
      <div class="card-box">
        <div class="card-item">
          <%= link_to user_path(@user) do %>
            <% if !@user.photo.blank? %>
              <%= cl_image_tag @user.photo, width: 30, height: 30, crop: :fill, class: "avatar" %>
            <% else %>
              <%= image_tag "default-profile.png", class: "avatar" %>
            <% end %>
            <h4> <%= @user.first_name %> <%= @user.last_name %> </h4>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-4">
      <div class="card-box">
        <div class="card-item">
          <% if current_user == @user %>
            <div class="row">
              <div class="col-xs-12">
                <%= link_to "Update this skill", edit_skill_path(@skill), class: "btn btn-danger btn-lg" %>
              </div>
              <div class="col-xs-12">
                <%= link_to "Delete this skill", skill_path(@skill), method: :delete, class: "btn btn-base btn-lg" %>
              </div>
            </div>
          <% else %>
            <div class="row">
              <div class="col-xs-12">
                <%= link_to "Book", new_skill_booking_path(@skill), class: "btn btn-danger btn-lg" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="top-border">
    <h5><%= @skill.description %></h5>
  </div>
  <div class="bandeau-blanc">
  </div>
  <div id="map" style="width: 100%; height: 300px;"></div>
  <div class="bandeau-blanc">
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({
            provider: {
              styles: [
    {
        "featureType": "administrative",
        "elementType": "labels.text.fill",
        "stylers": [
            {
                "color": "#444444"
            }
        ]
    },
    {
        "featureType": "landscape",
        "elementType": "all",
        "stylers": [
            {
                "color": "#f2f2f2"
            }
        ]
    },
    {
        "featureType": "poi",
        "elementType": "all",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "road",
        "elementType": "all",
        "stylers": [
            {
                "saturation": -100
            },
            {
                "lightness": 45
            }
        ]
    },
    {
        "featureType": "road.highway",
        "elementType": "all",
        "stylers": [
            {
                "visibility": "simplified"
            }
        ]
    },
    {
        "featureType": "road.arterial",
        "elementType": "labels.icon",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "transit",
        "elementType": "all",
        "stylers": [
            {
                "visibility": "off"
            }
        ]
    },
    {
        "featureType": "water",
        "elementType": "all",
        "stylers": [
            {
                "color": "#74a8be"
            },
            {
                "visibility": "on"
            }
        ]
    }
]
            },
      internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
