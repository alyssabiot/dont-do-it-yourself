                      <% else %>
                        <i class="fa fa-times-circle" style="color: red;"></i>
                      <% end %>
                    </div>
                    <div class="card-description">
                        <h2><%= booking.skill.title %> with <%= booking.skill.user.first_name %></h2>
                        <p><%= booking.starts_at %></p>
                        <p><%= booking.duration %> minutes </p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
